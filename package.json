{
  "name": "feedscout",
  "description": "Advanced feed autodiscovery for JavaScript. Collect feed URIs from webpages using multiple discovery methods.",
  "keywords": [
    "rss",
    "rss-autodiscovery",
    "autodiscovery",
    "auto-discovery",
    "feed-finder",
    "rss-finder",
    "feed-discovery",
    "rss-discovery",
    "feed-locator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/macieklamberski/feedscout.git"
  },
  "homepage": "https://github.com/macieklamberski/feedscout",
  "bugs": {
    "url": "https://github.com/macieklamberski/feedscout/issues"
  },
  "author": "Maciej Lamberski",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./feeds": {
      "import": {
        "types": "./dist/feeds.d.ts",
        "default": "./dist/feeds.js"
      },
      "require": {
        "types": "./dist/feeds.d.cts",
        "default": "./dist/feeds.cjs"
      }
    },
    "./blogrolls": {
      "import": {
        "types": "./dist/blogrolls.d.ts",
        "default": "./dist/blogrolls.js"
      },
      "require": {
        "types": "./dist/blogrolls.d.cts",
        "default": "./dist/blogrolls.cjs"
      }
    },
    "./hubs": {
      "import": {
        "types": "./dist/hubs.d.ts",
        "default": "./dist/hubs.js"
      },
      "require": {
        "types": "./dist/hubs.d.cts",
        "default": "./dist/hubs.cjs"
      }
    },
    "./adapters": {
      "import": {
        "types": "./dist/adapters.d.ts",
        "default": "./dist/adapters.js"
      },
      "require": {
        "types": "./dist/adapters.d.cts",
        "default": "./dist/adapters.cjs"
      }
    },
    "./methods": {
      "import": {
        "types": "./dist/methods.d.ts",
        "default": "./dist/methods.js"
      },
      "require": {
        "types": "./dist/methods.d.cts",
        "default": "./dist/methods.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsdown src/exports/index.ts src/exports/feeds.ts src/exports/blogrolls.ts src/exports/hubs.ts src/exports/adapters.ts src/exports/methods.ts --format cjs,esm --dts --clean --unbundle --no-fixed-extension",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "feedsmith": "^2.7.0",
    "htmlparser2": "^10.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "kvalita": "1.8.0",
    "tsdown": "^0.17.1",
    "vitepress": "^1.6.4"
  }
}
