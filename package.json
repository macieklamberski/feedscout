{
  "name": "feedscout",
  "description": "Advanced feed autodiscovery for JavaScript. Collect feed URIs from webpages using multiple discovery methods.",
  "keywords": [
    "rss",
    "rss-autodiscovery",
    "autodiscovery",
    "auto-discovery",
    "feed-finder",
    "rss-finder",
    "feed-discovery",
    "rss-discovery",
    "feed-locator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/macieklamberski/feedscout.git"
  },
  "homepage": "https://github.com/macieklamberski/feedscout",
  "bugs": {
    "url": "https://github.com/macieklamberski/feedscout/issues"
  },
  "author": "Maciej Lamberski",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/common/utils.d.ts",
        "default": "./dist/common/utils.js"
      },
      "require": {
        "types": "./dist/common/utils.d.cts",
        "default": "./dist/common/utils.cjs"
      }
    },
    "./guess": {
      "import": {
        "types": "./dist/guess/index.d.ts",
        "default": "./dist/guess/index.js"
      },
      "require": {
        "types": "./dist/guess/index.d.cts",
        "default": "./dist/guess/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsdown src/index.ts src/common/utils.ts src/guess/index.ts --format cjs,esm --dts --clean --unbundle --no-fixed-extension"
  },
  "dependencies": {
    "htmlparser2": "^10.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "kvalita": "^1.3.1",
    "tsdown": "^0.16.4"
  }
}
